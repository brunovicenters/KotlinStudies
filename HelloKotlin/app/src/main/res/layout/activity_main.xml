<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <EditText
            android:layout_width="315dp"
            android:layout_height="65dp"
            android:inputType="text"
            android:text="Write your name"
            android:ems="10"
            android:id="@+id/editMsg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.062" android:minHeight="48dp"
    />
    <Button
            android:text="Button"
            android:layout_width="123dp"
            android:layout_height="70dp" android:id="@+id/btnIr"
            app:layout_constraintTop_toBottomOf="@+id/editMsg"
            android:layout_marginTop="40dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.861"/>
</androidx.constraintlayout.widget.ConstraintLayout>