<PreferenceScreen
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Geral">

        <com.jaredrummler.android.colorpicker.ColorPreferenceCompat
                app:defaultValue="@color/textDefaultColor"
                app:key="textColor"
                app:summary="Pick a color"
                app:title="Text color">

        </com.jaredrummler.android.colorpicker.ColorPreferenceCompat>

        <com.jaredrummler.android.colorpicker.ColorPreferenceCompat
                app:defaultValue="@color/noteDefaultColor"
                app:key="noteColor"
                app:summary="Pick a color"
                app:title="Note color">

        </com.jaredrummler.android.colorpicker.ColorPreferenceCompat>
    </PreferenceCategory>

</PreferenceScreen>