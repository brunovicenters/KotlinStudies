<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActionsActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="text|textUri"
            android:ems="10"
            android:id="@+id/inputURL"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:hint="URL"/>

    <Button
            android:text="Abrir Navegador"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnNavegador"
            app:layout_constraintTop_toBottomOf="@+id/inputURL"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"/>

    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/ic_launcher_foreground"
            android:id="@+id/imgFoto"
            app:layout_constraintTop_toBottomOf="@+id/btnNavegador"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"/>

    <Button
            android:text="Tirar Foto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnFoto"
            app:layout_constraintTop_toBottomOf="@+id/imgFoto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"/>

    <Button
            android:text="Definir Alarme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnAlarme"
            app:layout_constraintTop_toBottomOf="@+id/btnFoto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>